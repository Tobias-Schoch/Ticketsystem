# Application
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ticketsystem

# JWT (generate with: openssl rand -base64 64)
JWT_ACCESS_SECRET=your-access-secret-min-64-characters-long-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-min-64-characters-long-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# CORS
CORS_ORIGIN=http://localhost:5173

# Email (SMTP)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=noreply@ticketsystem.de
SMTP_FROM_NAME=Ticketsystem

# Admin Seed
ADMIN_EMAIL=admin@ticketsystem.de
ADMIN_PASSWORD=ChangeThisPassword123!
ADMIN_NAME=Team-Lead

# Redis (optional, for rate limiting)
REDIS_URL=redis://localhost:6379
